{
  "name": "promptr",
  "version": "1.0.0",
  "description": "AI-Powered Prompt Engineering Assistant",
  "author": {
    "name": "Adam Wawrzynkowski"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder -m --x64 --arm64",
    "build:intel": "electron-builder -m --x64",
    "build:silicon": "electron-builder -m --arm64",
    "build:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m --x64 --arm64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.promptr.app",
    "productName": "PROMPTR",
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@google-cloud/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/pidusage/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": ".",
        "filter": ["*.{png,icns}"]
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "signIgnore": [
        "node_modules/sharp/vendor/**/*"
      ]
    },
    "dmg": {
      "sign": false
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "protocols": {
      "name": "promptr-protocol",
      "schemes": ["promptr"]
    }
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@google-cloud/translate": "^8.5.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.16",
    "node-fetch": "^2.6.1",
    "pidusage": "^3.0.2",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-react": "^7.22.3",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "license": "MIT"
}
